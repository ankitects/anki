py_binary(
    name = "helper_build",
    srcs = ["helper_build.py"],
    tags = ["manual"],
)

genrule(
    name = "helper_dylib",
    srcs = glob(["*.swift"]),
    outs = ["libankihelper.dylib"],
    cmd = "$(location :helper_build) $@ $(COMPILATION_MODE) $(SRCS)",
    tags = ["manual"],
    tools = [":helper_build"],
    visibility = ["//qt:__subpackages__"],
)
