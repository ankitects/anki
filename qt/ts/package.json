{
  "name": "anki-dtop-js",
  "version": "1.0.0",
  "description": "Anki desktop js support files",
  "scripts": {
    "build": "tsc --build",
    "sass": "sass --no-source-map scss:../aqt_data/web",
    "pretty": "prettier --write src/*.ts",
    "test": "jest --verbose --runInBand",
    "check-pretty": "prettier --check src/*.ts"
  },
  "jest": {
    "testEnvironment": "./testEnvironment.js",
    "globalSetup": "./globalSetup.js",
    "globalTeardown": "./globalTeardown.js",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "jshintConfig": {
    "esversion": 8
  },
  "private": true,
  "author": "Ankitects Pty Ltd",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@types/jquery": "^3.3.31",
    "@types/jqueryui": "^1.12.9",
    "@types/mathjax": "0.0.36",
    "sass": "^1.25.0",
    "typescript": "^3.7.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/puppeteer": "^2.0.1",
    "express": "^4.17.1",
    "jest": "^25.3.0",
    "prettier": "^1.19.1",
    "puppeteer": "^3.0.0",
    "ts-jest": "^25.3.1"
  }
}
