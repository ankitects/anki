load("@bazel_skylib//rules:copy_file.bzl", "copy_file")
load("//ts:copy.bzl", "copy_files_into_group")
load("//ts:compile_sass.bzl", "compile_sass")

compile_sass(
    srcs = glob(
        ["*.scss"],
        exclude = ["_*.scss"],
    ),
    group = "css_local",
    deps = [
        "//ts/sass:core_lib",
        "//ts/sass:buttons_lib",
        "//ts/sass:scrollbar_lib",
        "//ts/sass:card_counts_lib",
    ],
    visibility = ["//visibility:private"],
)

copy_files_into_group(
    name = "editor",
    srcs = [
        "editor.css",
        "editable.css",
    ],
    package = "//ts/editor",
)

copy_files_into_group(
    name = "editor-toolbar",
    srcs = [
        "editor-toolbar.css",
    ],
    package = "//ts/editor-toolbar",
)

filegroup(
    name = "css",
    srcs = [
        "css_local",
        "editor",
        "editor-toolbar",
    ],
    visibility = ["//qt:__subpackages__"],
)
